@model string[]
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Header
{
    <div class="view">
        @foreach (var item in new[] { "Home", "List", "Edit" })
        {
            @Html.ActionLink(item, item, null, new { style = "margin:5px" })
        }
    </div>
}

@section Body{
    <div class="view">

        This is a list of fruit names:

        @foreach (var item in Model)
        {
            <span>
                <b>
                    @item
                </b>
            </span>
        }

    </div>
}
